<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rectangle_1"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newAccount">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_mail"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="-7dp"

            android:layout_marginEnd="50dp"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="7dp"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="398dp"></TextView>

        <TextView
            android:id="@+id/emailText"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="48dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="7dp"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="398dp"></TextView>

        <EditText
            android:id="@+id/login_mail"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="-9dp"
            android:layout_marginEnd="49dp"
            android:ems="10"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/ash"
            android:textColorHint="@color/ash"
            android:textSize="5dp" />

        <EditText
            android:id="@+id/login_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="-12dp"
            android:layout_marginEnd="57dp"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textColor="@color/ash"
            android:textColorHint="@color/ash"
            android:textSize="5dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_below="@+id/editTextTextPassword"
            android:layout_alignParentStart="true"

            android:layout_alignParentEnd="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="46dp"
            android:background="@drawable/lg_btn"
            android:text="Create Account"
            android:textColor="@color/white"
            android:textSize="5dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_pass"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-7dp"
            android:text="Confirm Password"
            android:textColor="@color/black"
            android:textSize="7dp" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="-11dp"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@color/ash"
            android:textColorHint="@color/ash"
            android:textSize="5dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:layout_alignParentStart="true"
            android:layout_marginStart="198dp"
            android:layout_marginTop="19dp"
            android:text="Or"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/go_logIn"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="76dp"
            android:layout_marginTop="-23dp"
            android:onClick="goLogInPage"
            android:text="I have an account"
            android:textColor="@color/blue_1"
            android:textSize="5dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>