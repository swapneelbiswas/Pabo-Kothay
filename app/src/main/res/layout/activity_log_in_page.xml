<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rectangle_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInPage">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_mail"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="26dp"
                android:layout_marginTop="30dp"

                android:layout_marginEnd="28dp"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="-2dp"
                tools:layout_editor_absoluteY="398dp"></TextView>

            <TextView
                android:id="@+id/emailText"
                android:layout_width="358dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="26dp"
                android:layout_marginTop="287dp"
                android:layout_marginEnd="27dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="-2dp"
                tools:layout_editor_absoluteY="398dp"></TextView>

            <EditText
                android:id="@+id/login_mail"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailText"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="29dp"
                android:ems="10"
                android:hint="Enter Email"
                android:textColor="@color/ash"
                android:textColorHint="@color/ash"
                android:inputType="textEmailAddress"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/login_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="29dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="27dp"
                android:ems="10"
                android:hint="Enter Password"
                android:textColor="@color/ash"
                android:textColorHint="@color/ash"
                android:inputType="textPassword"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="139dp"
                android:layout_height="70dp"
                android:layout_below="@+id/login_pass"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="139dp"
                android:layout_marginTop="49dp"
                android:layout_marginEnd="133dp"
                android:background="@drawable/lg_btn"
                android:text="login"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button"
                android:layout_alignParentStart="true"
                android:layout_marginStart="193dp"
                android:layout_marginTop="28dp"
                android:text="Or"
                android:textSize="30dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/go_newAccount"
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="77dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="75dp"
                android:onClick="goNewAccount"
                android:text="Don't have an account?"
                android:textColor="@color/blue_1"
                android:textSize="25dp" />

        </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>