<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Furniture">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".sport_stuff_search"
        android:orientation="vertical"
        android:padding="35dp"
        android:background="@drawable/bgbgbg"
        android:scrollbarAlwaysDrawVerticalTrack="true">
        <SearchView
            android:id="@+id/searchViewBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:iconifiedByDefault="false"
            android:queryHint="search store/book"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>
        <ListView
            android:id="@+id/bookStoreList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:cacheColorHint="@color/blue_1"
            android:textColor="@color/black"
            android:clickable="true"
            android:textSize="100dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>