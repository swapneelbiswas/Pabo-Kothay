<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newAccount">

    <RelativeLayout
        android:background="@drawable/rectangle_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_mail"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="8dp"

            android:layout_marginEnd="27dp"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="398dp"></TextView>


        <TextView
            android:id="@+id/emailText"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="348dp"
            android:layout_marginEnd="29dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="398dp"></TextView>

        <EditText
            android:id="@+id/login_mail"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="29dp"
            android:ems="10"
            android:hint="Enter Email"
            android:textColor="@color/ash"
            android:inputType="textEmailAddress"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/login_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="27dp"
            android:ems="10"
            android:hint="Enter Password"
            android:textColor="@color/ash"
            android:inputType="textPassword"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="63dp"

            android:layout_below="@+id/gMap_link"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="78dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="82dp"
            android:background="@drawable/lg_btn"
            android:onClick="goMain"
            android:text="Create Account"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_pass"
            android:layout_alignParentStart="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="3dp"
            android:text="Confirm Password"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="Confirm Password"
            android:textSize="20dp"
            android:textColor="@color/ash"
            android:inputType="textPassword" />


        <TextView
            android:id="@+id/shop_name"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextTextPassword"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="6dp"
            android:text="Shop Name"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/editShopName"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="-3dp"
            android:ems="10"
            android:hint="Enter Shop Name"
            android:inputType="text"
            android:textColor="@color/ash"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/shop_item"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editShopName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="6dp"
            android:text="Shop Items"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/map_link"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_item"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="21dp"
            android:text="Goodle map link"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/gMap_link"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/map_link"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="7dp"
            android:ems="10"
            android:hint="Enter Google map link"
            android:inputType="textWebEditText"
            android:textColor="@color/ash"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:layout_alignParentStart="true"
            android:layout_marginStart="198dp"
            android:layout_marginTop="19dp"
            android:text="Or"
            android:textSize="25dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/go_logIn"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="109dp"
            android:layout_marginTop="11dp"
            android:onClick="goLogInPage"
            android:text="I have an account"
            android:textColor="@color/blue_1"
            android:textSize="25dp" />


    </RelativeLayout>

</ScrollView>

