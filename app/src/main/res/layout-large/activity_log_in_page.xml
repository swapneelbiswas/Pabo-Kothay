<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rectangle_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_mail"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="64dp"

            android:layout_marginEnd="20dp"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="55dp"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="398dp"></TextView>

        <TextView
            android:id="@+id/emailText"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="592dp"
            android:layout_marginEnd="22dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="55dp"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="398dp"></TextView>

        <EditText
            android:id="@+id/login_mail"
            android:layout_width="880dp"
            android:layout_height="91dp"
            android:layout_below="@+id/emailText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="47dp"
            android:ems="10"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/ash"
            android:textSize="45dp" />

        <EditText
            android:id="@+id/login_pass"
            android:layout_width="871dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="60dp"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textColor="@color/ash"
            android:textSize="45dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="674dp"
            android:layout_height="135dp"
            android:layout_below="@+id/login_pass"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="139dp"
            android:layout_marginTop="121dp"
            android:layout_marginEnd="148dp"
            android:background="@drawable/lg_btn"
            android:onClick="goMainActivity"
            android:text="login"
            android:textColor="@color/white"
            android:textSize="55dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:layout_alignParentStart="true"
            android:layout_marginStart="455dp"
            android:layout_marginTop="62dp"
            android:text="Or"
            android:textColor="@color/black"
            android:textSize="45dp" />

        <TextView
            android:id="@+id/go_newAccount"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="136dp"
            android:layout_marginTop="98dp"
            android:layout_marginEnd="20dp"
            android:onClick="goNewAccount"
            android:text="Don't have an account? Register"
            android:textColor="@color/blue_1"
            android:textSize="45dp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>