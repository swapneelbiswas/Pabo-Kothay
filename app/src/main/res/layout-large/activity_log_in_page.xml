<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rectangle_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_mail"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="26dp"

            android:layout_marginTop="13dp"

            android:layout_marginEnd="28dp"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="45dp"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="398dp"></TextView>

        <TextView
            android:id="@+id/emailText"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="323dp"
            android:layout_marginEnd="21dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="45dp"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="398dp"></TextView>

        <EditText
            android:id="@+id/login_mail"
            android:layout_width="880dp"
            android:layout_height="91dp"
            android:layout_below="@+id/emailText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="47dp"
            android:ems="10"
            android:hint="Enter Email"
            android:textColorHint="@color/ash"
            android:inputType="textEmailAddress"
            android:textColor="@color/ash"
            android:textSize="35dp" />

        <EditText
            android:id="@+id/login_pass"
            android:layout_width="871dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="60dp"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textColor="@color/ash"
            android:textColorHint="@color/ash"
            android:textSize="35dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="271dp"
            android:layout_height="109dp"
            android:layout_below="@+id/login_pass"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="153dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="177dp"
            android:background="@drawable/lg_btn"

            android:text="login"
            android:textColor="@color/white"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:layout_alignParentStart="true"
            android:layout_marginStart="274dp"
            android:layout_marginTop="32dp"
            android:text="Or"
            android:textColor="@color/black"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/go_newAccount"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="78dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="78dp"
            android:onClick="ShowPopup"
            android:text="Don't have an account? Register"
            android:textColor="@color/blue_1"
            android:textSize="30dp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>